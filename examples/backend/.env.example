# Copy this file to .env and update with your values

# =============================================
# Required Configuration
# =============================================

# Your SBC API key from https://dashboard.stablecoin.xyz
SBC_API_KEY=sbc-your-api-key-here

# =============================================
# Optional Configuration
# =============================================

# Private key for the account owner (if not provided, a random one will be generated)
# Format: 0x followed by 64 hex characters
PRIVATE_KEY=

# Enable debug logging (recommended for development)
SBC_DEBUG=true

# Environment (affects logging and behavior)
NODE_ENV=development
