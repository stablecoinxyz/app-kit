{
  "name": "@sbc/app-kit",
  "version": "0.1.0",
  "description": "SBC App Kit - a monorepo for the SBC Account Abstraction SDK",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm --recursive --filter './packages/*' run build",
    "build:core": "pnpm --filter @sbc/core run build",
    "build:react": "pnpm --filter @sbc/react run build",
    "dev": "pnpm --recursive --filter './packages/*' run dev",
    "test": "pnpm --recursive --filter './packages/*' run test",
    "test:ci": "pnpm --recursive --filter './packages/*' run test:ci",
    "lint": "pnpm --recursive --filter './packages/*' run lint",
    "lint:fix": "pnpm --recursive --filter './packages/*' run lint:fix",
    "examples:backend": "cd examples/backend && pnpm run start",
    "examples:react": "cd examples/react-app && ESLINT_NO_DEV_ERRORS=true SKIP_PREFLIGHT_CHECK=true pnpm start",
    "clean": "rm -rf packages/*/dist packages/*/node_modules examples/*/node_modules node_modules pnpm-lock.yaml",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "keywords": [
    "SBC",
    "Stable Coin",
    "account-abstraction",
    "erc4337",
    "paymaster",
    "gasless",
    "blockchain",
    "ethereum"
  ],
  "author": "Stable Coin Inc.",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stablecoinxyz/app-kit.git"
  },
  "bugs": {
    "url": "https://github.com/stablecoinxyz/app-kit/issues"
  },
  "homepage": "https://github.com/stablecoinxyz/app-kit#readme"
}
